{
  "name": "magic-string-rs",
  "version": "0.0.0",
  "description": "https://github.com/Rich-Harris/magic-string Rust port",
  "main": "index.js",
  "repository": "https://github.com/h-a-n-a/magic-string-rs.git",
  "authors": [
    {
      "name": "h-a-n-a",
      "email": "andywangsy@gmail.com"
    },
    {
      "name": "LongYinan",
      "email": "github@lyn.one"
    }
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "node",
    "benchmark"
  ],
  "scripts": {
    "bench": "node -r @swc-node/register benchmark/bench.ts",
    "build": "yarn --cwd node build",
    "format": "prettier . -w",
    "test": "mocha -r @swc-node/register **/tests/**/*.spec.ts"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.0.0",
    "@swc-node/register": "^1.4.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "@types/source-map": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.31.2",
    "chalk": "^4.1.2",
    "esbuild": "^0.14.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "source-map": "0.6.1",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "@swc-node/register"
    ],
    "files": [
      "**/*.spec.ts"
    ]
  }
}
